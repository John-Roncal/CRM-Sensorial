@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Xsrf
@{
    var currentController = (ViewContext.RouteData.Values["controller"] ?? "").ToString();
    var currentAction = (ViewContext.RouteData.Values["action"] ?? "").ToString();

    var reservaHref = Url.Action("Index", "Chat");

    bool isReservaActive = currentController == "Chat";

    bool isRegistrarseActive = currentController == "Registro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <base href="@(Url.Content("~/"))" />
    <title>@(ViewData["Title"] ?? "Inicio") - Central Restaurante</title>
    <meta name="csrf-token" content="@Xsrf.GetAndStoreTokens(ViewContext.HttpContext).RequestToken" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" asp-append-version="true" />

    <style>
        .navbar-custom {
            background: rgba(28,28,28,0.88);
            min-height: 86px;
            border-bottom: 1px solid rgba(255,255,255,0.03);
            backdrop-filter: blur(2px);
        }

        .navbar-brand img {
            height: 64px;
            object-fit: contain;
            display: block;
        }

        .navbar-custom .navbar-nav {
            gap: 1.6rem;
            align-items: center;
        }

        .navbar-custom .nav-link {
            color: rgba(255,255,255,0.86);
            padding: 0.7rem 0.6rem;
            font-weight: 500;
            letter-spacing: 0.6px;
        }

            .navbar-custom .nav-link:hover {
                color: #ffffff;
                opacity: 0.95;
            }

            .navbar-custom .nav-link.active {
                color: #ffffff;
                position: relative;
            }

                .navbar-custom .nav-link.active::after {
                    content: "";
                    position: absolute;
                    left: 50%;
                    transform: translateX(-50%);
                    bottom: -8px;
                    width: 36px;
                    height: 2px;
                    background: rgba(255,255,255,0.92);
                    border-radius: 2px;
                }

        .navbar-custom .dropdown-toggle {
            display: inline-flex;
            align-items: center;
        }

        .navbar-custom.shadow-sm {
            box-shadow: 0 1px 8px rgba(0,0,0,0.18);
        }

        @@media (max-width: 991.98px) {
            .navbar-brand img

        {
            height: 52px;
        }

        .navbar-custom {
            min-height: 64px;
        }

            .navbar-custom .nav-link {
                padding: .5rem .4rem;
                font-size: .98rem;
            }

        }

        body {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom sticky-top shadow-sm" role="navigation">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo2_sf.png" alt="Central Restaurante" />
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Alternar navegación">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" && currentAction == "Historia" ? "active" : "")"
                           asp-controller="Home" asp-action="Historia">Historia</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" && currentAction == "Contacto" ? "active" : "")"
                           asp-controller="Home" asp-action="Contacto">Contacto</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(isReservaActive ? "active" : "")"
                           href="@reservaHref">Reserva</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @if (User?.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userMenu"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle fs-5 me-2"></i>
                                <span class="me-1">@User.Identity.Name</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userMenu">
                                @if (User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            <i class="bi bi-speedometer2 me-2"></i> Panel Admin
                                        </a>
                                    </li>
                                }
                                @if (User.IsInRole("Mozo"))
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Mozo" asp-action="Index">
                                            <i class="bi bi-card-checklist me-2"></i> Vista Mozo
                                        </a>
                                    </li>
                                }

                                <li>
                                    <a class="dropdown-item" asp-controller="Cliente" asp-action="Index">
                                        <i class="bi bi-person-lines-fill me-2"></i> Mi cuenta
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <li class="px-3">
                                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-secondary w-100">
                                            <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Auth" ? "active" : "")" asp-controller="Auth" asp-action="Login">
                                Iniciar sesión
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(isRegistrarseActive ? "active" : "")" asp-controller="Registro" asp-action="Index">
                                Registrarse
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderSection("Hero", required: false)

    @if (!IsSectionDefined("Hero") && ViewData["Title"]?.ToString() != "Central Restaurante")
    {
        <header class="bg-light py-2 mb-4">
            <div class="container">
                <h1 class="h4 mb-0">@ViewData["Title"]</h1>
            </div>
        </header>
    }

    <main role="main" class="container flex-grow-1">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        window.jQuery || document.write('<script src="/lib/jquery/dist/jquery.min.js"><\/script>');
    </script>

    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    @using System.Security.Claims
    <script>
        (function(){
            var uid = null;
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                    <text>uid = '@(User.FindFirst(ClaimTypes.NameIdentifier)?.Value)';</text>
            }
            <text>window.__USER_ID = uid;</text>
        })();
    </script>

    <script>
        (function(){
            window.__CSRF_TOKEN = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
            window.fetchWithCsrf = function(url, opts){
                opts = opts || {};
                opts.headers = opts.headers || {};
                if (window.__CSRF_TOKEN) {
                    opts.headers['RequestVerificationToken'] = window.__CSRF_TOKEN;
                }
                return fetch(url, opts);
            };
        })();
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
